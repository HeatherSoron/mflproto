extends base

block content
    main.main
        .card-container
            h2.heading-secondary Create a new sentence
            form.card.create-sentence-form
                .card__details
                    .form__group
                        label.form__label(for='email') Spanish
                        input#spanish.form__input(type='text', placeholder='Spanish sentence', required)
                    .form__group
                        label.form__label(for='password') English
                        input#english.form__input(type='text', placeholder='English sentence', required)
                    .form__group
                        label.form__label Level
                        input#level.form__input(type='number', max='9', placeholder='Level', required)
                    .form__group
                        label.form__label Vivaref
                        input#vivaRef.form__input(type='number', step='0.1', min='1', max='6' placeholder='Vivaref', required)
                    .form__group
                        label.form__label Tense
                        input#tense.form__input(type='text', placeholder='Tense', required)
                    .form__group
                        label.form__label Grammar
                        input#grammar.form__input(type='text', placeholder='Grammar', required)
                    .form__group
                        button.btn.btn--green Submit


